# Silent Risk - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# DEPLOYMENT
# ============================================================================

# Private key for contract deployment (without 0x prefix)
# ⚠️ NEVER commit your real private key to git!
DEPLOYER_PRIVATE_KEY=your_private_key_here

# Deployer address (derived from private key)
DEPLOYER_ADDRESS=0x...

# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================

# Sepolia testnet RPC URL (get from Infura, Alchemy, etc.)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Mainnet RPC URL (for production)
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# ============================================================================
# CONTRACT ADDRESSES (fill after deployment)
# ============================================================================

# RiskScoreVault contract address (deployed first)
VAULT_CONTRACT_ADDRESS=

# PassportNFT contract address (deployed second)
PASSPORT_CONTRACT_ADDRESS=

# ZK Verifier contract address (if using separate verifier)
VERIFIER_ADDRESS=

# ============================================================================
# VERIFICATION
# ============================================================================

# Etherscan API key for contract verification
ETHERSCAN_API_KEY=your_etherscan_api_key

# ============================================================================
# TESTING & DEVELOPMENT
# ============================================================================

# Gas reporter settings
REPORT_GAS=true
COINMARKETCAP_API_KEY=

# Coverage settings
SOLIDITY_COVERAGE=true
